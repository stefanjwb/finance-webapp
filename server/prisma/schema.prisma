generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Het Gebruiker model
model User {
  // MongoDB ID specificatie:
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  username      String   @unique
  email         String   @unique
  password      String
  role          String   @default("user")
  isPremium     Boolean  @default(false)
  createdAt     DateTime @default(now())
  
  // Relatie: Een gebruiker heeft meerdere transacties
  transactions  Transaction[]
}

// Het Transactie model (Nieuw voor je Finance App)
model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float    // Bedrag
  type        String   // 'income' of 'expense'
  category    String   // bijv. 'Boodschappen', 'Huur', 'Salaris'
  description String?
  date        DateTime @default(now())
  
  // Koppeling aan User
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}