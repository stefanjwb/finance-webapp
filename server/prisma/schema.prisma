generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Het Gebruiker model
model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  username      String   @unique
  email         String   @unique
  password      String
  role          String   @default("user")
  isPremium     Boolean  @default(false)
  createdAt     DateTime @default(now())
  
  // Relaties
  transactions  Transaction[]
  budgets       Budget[]      // <--- Deze regel is toegevoegd voor de relatie
}

// Het Transactie model
model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  type        String
  category    String
  description String?
  notes       String?  
  isHidden    Boolean  @default(false)
  date        DateTime @default(now())
  
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}

// Het Budget model (Aangepast voor MongoDB)
model Budget {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  category  String
  amount    Float
  type      String   @default("variable") // "fixed" of "variable"
  
  // Relatie velden moeten String + @db.ObjectId zijn in MongoDB
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}